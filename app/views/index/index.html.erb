<%= form_tag(sign_up_path, :method => "post") do %>

  <div class="container" style="width: 30%; margin-top: 100px;">
    <div class="card">
      <div class="row">
        <form class="col">
          <div class="row">

            <div class="input-field col s6" style="margin-top: 40px">
              <i class="material-icons prefix">account_circle</i>
              <input id="icon_prefix" name="cpf" type="text" class="validate" data-length="11">
              <label for="icon_prefix">CPF</label>
            </div>
            <button class="waves-effect waves-light btn-small" style="margin-top: 40px">
              <i class="large material-icons">trending_flat</i></button>

          </div>

        </form>
      </div>
    </div>
  </div>

<% end %>