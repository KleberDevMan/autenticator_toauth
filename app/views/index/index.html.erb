<%= form_tag(sign_up_path, :method => "post") do %>


  <div class="container">
    <div class="card z-depth-3 center-align" style="width: 50%">
      <div class="row">

        <% if flash[:notice] %>
          <div class="red-text" role="alert" style="margin: 10px"><%= flash[:notice] %></div>
        <% end %>

        <div class="input-field col s6 offset-s2">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" name="cpf" type="text" class="validate" data-length="11">
          <label for="icon_prefix">CPF</label>
        </div>
        <div class="col s4">
          <!--          <button class="waves-effect waves-light btn-floating left" style="margin-top: 20px">-->
          <!--            <i class="large material-icons">trending_flat</i></button>-->
          <button class="btn waves-effect waves-light left" type="submit" name="action" style="margin-top: 20px">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>

      </div>

    </div>

    <% if params[:value] != nil %>
      <%= params[:value] %>
    <% end %>
  </div>

<% end %>