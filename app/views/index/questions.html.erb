<h1>Question 1</h1>

<p><%= $request_questions[0].question.desc %></p><br>

<% $request_questions[0].answers.each do |answer| %>
  <p><%= answer.desc %></p>
<% end %><br>





<%= form_tag(result_path, method: "post") do %>

  <div class="deep-purple bar "></div>

  <!-- card question -->
  <div class="card">

    <!--    question 1-->
    <div class="field q11 card-content">

      <%= label_tag :q1, $request_questions[0].question.desc, class: "flow-text" %> <br>
      <%= radio_button_tag :q1, $request_questions[0].answers[0].value, id: "a11" %>
      <label for="a11" class="waves-effect waves-light btn q1"><%= $request_questions[0].answers[0].desc %></label> <br> <br>
      <%= radio_button_tag :q1, $request_questions[0].answers[2].value, id: "a12" %>
      <label for="a12" class="waves-effect waves-light btn q1"><%= $request_questions[0].answers[2].desc %></label> <br> <br>
      <%= radio_button_tag :q1, $request_questions[0].answers[3].value, id: "a13" %>
      <label for="a13" class="waves-effect waves-light btn q1"><%= $request_questions[0].answers[3].desc %></label>

    </div>

    <!--    question 2-->
    <div class="field q22 card-content">

      <%= label_tag :q2, $request_questions[1].question.desc, class: "flow-text" %> <br>
      <div style="width:300px">
        <%= radio_button_tag :q2, :true, id: "a21" %>
        <label for="a21" class="waves-effect waves-light btn q2"><%= $request_questions[1].answers[0].desc %></label> <br> <br>
        <%= radio_button_tag :q2, :false, id: "a22" %>
        <label for="a22" class="waves-effect waves-light btn q2"><%= $request_questions[1].answers[2].desc %></label> <br> <br>
        <%= radio_button_tag :q2, :false, id: "a23" %>
        <label for="a23" class="waves-effect waves-light btn q2"><%= $request_questions[1].answers[3].desc %></label>

      </div>

    </div>

    <!--    question 3-->
    <div class="field q33 card-content">

      <%= label_tag :q3, $request_questions[2].question.desc, class: "flow-text" %> <br>
      <div style="width:300px">
        <%= radio_button_tag :q3, :true, id: "a31" %>
        <label for="a31" class="waves-effect waves-light btn q3"><%= $request_questions[2].answers[0].desc %></label> <br> <br>
        <%= radio_button_tag :q3, :false, id: "a32" %>
        <label for="a32" class="waves-effect waves-light btn q3"><%= $request_questions[2].answers[2].desc %></label> <br> <br>
        <%= radio_button_tag :q3, :false, id: "a33" %>
        <label for="a33" class="waves-effect waves-light btn q3"><%= $request_questions[2].answers[3].desc %></label>

      </div>


    </div>
    <div class="btn deep-purple darken-3 waves-effect back2 right"> Voltar</div>
    <div class="btn deep-purple darken-3 waves-effect back3 right"> Voltar</div>

  </div>

  <div class="row box">
    <div class="">
      <%= submit_tag "Enviar Respostas", class: "btn waves-effect waves-light blue sub actb col s5" %>
    </div>

    <div class="btn deep-purple darken-3 waves-effect rr right col s5 actb "> REFAZER RESPOSTAS</div>

  </div>
<% end %>

<script type="text/javascript">

    $(document).ready(function () {
        $('.q22').hide();
        $('.q33').hide();
        $('.sub').hide();
        $('.rr').hide();
        $('.back2').hide();
        $('.back3').hide();

        $(".q1").click(function () {
            $('.q11').hide(500);
            $('.q22').show(500);
            $('.bar').animate({width: "33%"});
            $('.back2').show();
        });
        $(".q2").click(function () {
            $('.q33').show(500);
            $('.q22').hide(500);
            $('.bar').animate({width: "66%"});
            $('.back2').hide();
            $('.back3').show();

        });
        $(".q3").click(function () {
            $('.q33').hide(500);
            $('.bar').animate({width: "100%"});
            $('.sub').show();
            $('.rr').show();
            $('.back3').hide();
        });


        $(".back2").click(function () {
            $('.q22').hide(500);
            $('.q11').show(500);
            $('.bar').animate({width: "1%"});
            $('.back2').hide();

        });
        $(".back3").click(function () {
            $('.q33').hide(500);
            $('.q22').show(500);
            $('.back3').hide();
            $('.back2').show();
            $('.bar').animate({width: "33%"});

        });

        $(".rr").click(function () {
            $('.rr').hide();
            $('.sub').hide();
            $('.q11').show(500);
            $('.bar').animate({width: "1%"})

        });

    });
</script>